{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "StsReadIdentity",
      "Effect": "Allow",
      "Action": [
        "sts:GetCallerIdentity"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EcrGetAuthorizationToken",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EcrPushOnlyToDevRepositories",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:CompleteLayerUpload",
        "ecr:InitiateLayerUpload",
        "ecr:PutImage",
        "ecr:UploadLayerPart"
      ],
      "Resource": [
        "arn:aws:ecr:eu-central-1:523234426229:repository/swisstopo-dev-api",
        "arn:aws:ecr:eu-central-1:523234426229:repository/swisstopo-dev-ui"
      ]
    },
    {
      "Sid": "EcsDescribeServicesDevOnly",
      "Effect": "Allow",
      "Action": [
        "ecs:DescribeServices"
      ],
      "Resource": [
        "arn:aws:ecs:eu-central-1:523234426229:cluster/swisstopo-dev",
        "arn:aws:ecs:eu-central-1:523234426229:service/swisstopo-dev/swisstopo-dev-api",
        "arn:aws:ecs:eu-central-1:523234426229:service/swisstopo-dev/swisstopo-dev-ui"
      ]
    },
    {
      "Sid": "EcsDescribeTaskDefinition",
      "Effect": "Allow",
      "Action": [
        "ecs:DescribeTaskDefinition"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EcsRegisterTaskDefinition",
      "Effect": "Allow",
      "Action": [
        "ecs:RegisterTaskDefinition"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EcsUpdateOnlyDevServices",
      "Effect": "Allow",
      "Action": [
        "ecs:UpdateService"
      ],
      "Resource": [
        "arn:aws:ecs:eu-central-1:523234426229:cluster/swisstopo-dev",
        "arn:aws:ecs:eu-central-1:523234426229:service/swisstopo-dev/swisstopo-dev-api",
        "arn:aws:ecs:eu-central-1:523234426229:service/swisstopo-dev/swisstopo-dev-ui"
      ]
    },
    {
      "Sid": "IamPassOnlyEcsTaskRoles",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "arn:aws:iam::523234426229:role/swisstopo-dev-ecs-execution-role",
        "arn:aws:iam::523234426229:role/swisstopo-dev-ecs-task-role"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": "ecs-tasks.amazonaws.com"
        }
      }
    }
  ]
}
