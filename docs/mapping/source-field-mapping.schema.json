{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://geo-ranking-ch.local/docs/mapping/source-field-mapping.schema.json",
  "title": "SourceFieldMappingSpecV1",
  "description": "Machine-readable mapping specification for BL-20.2.b source field mappings.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "spec_version",
    "spec_name",
    "generated_from",
    "updated_at",
    "transform_rules",
    "sources"
  ],
  "properties": {
    "spec_version": {
      "type": "string",
      "pattern": "^v[0-9]+(\\.[0-9]+)?$"
    },
    "spec_name": {
      "type": "string",
      "minLength": 1
    },
    "generated_from": {
      "type": "string",
      "minLength": 1
    },
    "updated_at": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "transform_rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/transformRule"
      }
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/sourceMapping"
      }
    }
  },
  "$defs": {
    "transformId": {
      "type": "string",
      "pattern": "^TR-[0-9]{2}$"
    },
    "transformRule": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "description"
      ],
      "properties": {
        "id": {
          "$ref": "#/$defs/transformId"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "mappingEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source_field",
        "target_paths",
        "transforms"
      ],
      "properties": {
        "source_field": {
          "type": "string",
          "minLength": 1
        },
        "target_paths": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "transforms": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/transformId"
          }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "sourceMapping": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source",
        "mappings"
      ],
      "properties": {
        "source": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "mappings": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/mappingEntry"
          }
        }
      }
    }
  }
}
