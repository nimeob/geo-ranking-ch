{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://geo-ranking-ch.local/docs/api/schemas/v1/location-intelligence.response.schema.json",
  "title": "LocationIntelligenceResponseV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "ok",
    "api_version",
    "request_id",
    "result"
  ],
  "properties": {
    "ok": {
      "const": true
    },
    "api_version": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "request_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "result": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "entity_id",
        "input_mode",
        "as_of",
        "confidence",
        "building_profile",
        "context_profile",
        "suitability_light",
        "explainability"
      ],
      "properties": {
        "entity_id": {
          "type": "string",
          "minLength": 1
        },
        "input_mode": {
          "type": "string",
          "enum": [
            "address",
            "point"
          ]
        },
        "as_of": {
          "type": "string",
          "minLength": 10
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "status": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "capabilities": {
              "type": "object",
              "additionalProperties": true
            },
            "entitlements": {
              "type": "object",
              "additionalProperties": true
            },
            "personalization": {
              "type": "object",
              "required": [
                "state",
                "source",
                "fallback_applied",
                "signal_strength"
              ],
              "properties": {
                "state": {
                  "type": "string",
                  "enum": [
                    "active",
                    "partial",
                    "deactivated"
                  ]
                },
                "source": {
                  "type": "string",
                  "minLength": 1
                },
                "fallback_applied": {
                  "type": "boolean"
                },
                "signal_strength": {
                  "type": "number",
                  "minimum": 0
                }
              },
              "additionalProperties": true
            },
            "dictionary": {
              "type": "object",
              "required": [
                "version",
                "etag"
              ],
              "additionalProperties": false,
              "properties": {
                "version": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 64
                },
                "etag": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 256
                },
                "domains": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "required": [
                      "version",
                      "etag"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "version": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 64
                      },
                      "etag": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 256
                      },
                      "path": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 256
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "building_profile": {
          "type": "object"
        },
        "context_profile": {
          "type": "object"
        },
        "suitability_light": {
          "type": "object",
          "required": [
            "traffic_light",
            "score",
            "base_score",
            "personalized_score"
          ],
          "properties": {
            "traffic_light": {
              "type": "string",
              "enum": [
                "green",
                "yellow",
                "red"
              ]
            },
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "base_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "personalized_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "reasons": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        },
        "explainability": {
          "type": "object",
          "required": [
            "sources",
            "base",
            "personalized"
          ],
          "properties": {
            "sources": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "source",
                  "as_of",
                  "confidence"
                ],
                "properties": {
                  "source": {
                    "type": "string"
                  },
                  "as_of": {
                    "type": "string"
                  },
                  "confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "license": {
                    "type": "string"
                  }
                }
              }
            },
            "base": {
              "type": "object",
              "required": [
                "factors"
              ],
              "properties": {
                "factors": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": [
                      "key",
                      "raw_value",
                      "normalized",
                      "weight",
                      "contribution",
                      "direction",
                      "reason",
                      "source"
                    ],
                    "properties": {
                      "key": {
                        "type": "string",
                        "minLength": 1
                      },
                      "raw_value": {
                        "type": "number"
                      },
                      "normalized": {
                        "type": "number"
                      },
                      "weight": {
                        "type": "number"
                      },
                      "contribution": {
                        "type": "number"
                      },
                      "direction": {
                        "type": "string",
                        "enum": [
                          "pro",
                          "contra",
                          "neutral"
                        ]
                      },
                      "reason": {
                        "type": "string",
                        "minLength": 1
                      },
                      "source": {
                        "type": "string",
                        "minLength": 1
                      }
                    }
                  }
                }
              }
            },
            "personalized": {
              "type": "object",
              "required": [
                "factors"
              ],
              "properties": {
                "factors": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": [
                      "key",
                      "raw_value",
                      "normalized",
                      "weight",
                      "contribution",
                      "direction",
                      "reason",
                      "source"
                    ],
                    "properties": {
                      "key": {
                        "type": "string",
                        "minLength": 1
                      },
                      "raw_value": {
                        "type": "number"
                      },
                      "normalized": {
                        "type": "number"
                      },
                      "weight": {
                        "type": "number"
                      },
                      "contribution": {
                        "type": "number"
                      },
                      "direction": {
                        "type": "string",
                        "enum": [
                          "pro",
                          "contra",
                          "neutral"
                        ]
                      },
                      "reason": {
                        "type": "string",
                        "minLength": 1
                      },
                      "source": {
                        "type": "string",
                        "minLength": 1
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
